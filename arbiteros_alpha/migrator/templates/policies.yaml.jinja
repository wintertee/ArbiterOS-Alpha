# {{ domain }} ArbiterOS Policy Configuration
#
# This file defines the governance policies for the {{ domain }} framework.
# Policies are applied by ArbiterOS to enforce execution constraints and
# enable dynamic workflow routing.
#
# Generated by ArbiterOS Migration Tool.

# Policy Checkers - Validate execution constraints
checkers:
{% for checker in yaml_checkers %}
  # {{ checker.description if checker.description is defined else checker.name }}
  - name: {{ checker.name }}
    type: {{ checker.type }}
    enabled: {{ checker.enabled | lower }}
{% if checker.parameters %}
{% for key, value in checker.parameters.items() %}
{% if value is iterable and value is not string %}
    {{ key }}:
{% for item in value %}
      - {{ item }}
{% endfor %}
{% else %}
    {{ key }}: {{ value }}
{% endif %}
{% endfor %}
{% endif %}

{% endfor %}

# Policy Routers - Dynamic workflow routing
routers:
{% for router in yaml_routers %}
  # {{ router.description if router.description is defined else router.name }}
  - name: {{ router.name }}
    type: {{ router.type }}
    enabled: {{ router.enabled | lower }}
{% if router.parameters %}
{% for key, value in router.parameters.items() %}
{% if value is iterable and value is not string %}
    {{ key }}:
{% for item in value %}
      - {{ item }}
{% endfor %}
{% else %}
    {{ key }}: {{ value }}
{% endif %}
{% endfor %}
{% endif %}

{% endfor %}

# Checkpoint Configuration
checkpointing:
  enabled: true
  path: "./checkpoints/{{ domain | lower | replace(' ', '_') }}.db"
  auto_save: true

# Logging Configuration
logging:
  level: INFO
  format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  governance_events: true
